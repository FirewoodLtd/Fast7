<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track' => true %>

<div class="login_wrapper" >
  
  
<div class="card">
  <article class="card-body">
    
  	<h4 class="card-title text-center mb-4 mt-1">
  	  <%= image_tag 'firewood_logo', :class=>'login_logo' %>  	  
  	</h4>
  	
  	<hr>
  	
  	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
  	
  	<div class="form-group">
    	<div class="input-group">
    	  
    		<div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-user"></i> </span>
        </div>
        <%= f.input_field :email, :required => true, :placeholder => "email (user@example.com)", class: "form-control", html: {spellcheck: "false"} %>		  
    		
    	</div> <!-- input-group.// -->
  	</div> <!-- form-group// -->
  	
  	
  	<div class="form-group">
    	<div class="input-group">
    	  
    		<div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
        <%= f.password_field :password, :required => true, :placeholder => "password", class: "text-field form-control", html: {autocomplete: "off"} %>
    		
    	</div> <!-- input-group.// -->
  	</div> <!-- form-group// -->	
  	
  	
  
  	<div class="form-group">
  	  <%= f.submit "Sign In", class: "btn btn-outline-secondary btn-block" %>
  	</div> <!-- form-group// -->
  	<%= render "devise/shared/links" %>
    <% end %>
    
    <small>
      <%=link_to 'Privacy Policy', 'https://fast-documents.s3.eu-west-2.amazonaws.com/Firewood+Tools+Privacy+Policy+v1.0.pdf', :target => 'blank' %> |
      <%=link_to 'Terms of Service', 'https://fast-documents.s3.eu-west-2.amazonaws.com/Firewood+Tools+Terms+of+Service+v1.0.pdf', :target => 'blank' %> 
    </small>    
    
  </article>
</div> <!-- card.// -->  
