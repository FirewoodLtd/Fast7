<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track' => true %>

<div class="login_wrapper" >
  
<%= image_tag 'firewood_logo.png', :class=>'login_logo' %>  
<br>

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  
  <p><%= render "devise/shared/error_messages", resource: resource %></p>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field form-control"  %>
  </div>

<br>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-outline-success btn-block" %>
  </div>
<% end %>

<br>
<%= render "devise/shared/links" %>

</div>
