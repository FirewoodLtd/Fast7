<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track' => true %>

<div class="login_wrapper" >

<h2>Set your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

<small>
  By signing up, I agree to the Firewood Tools 
  <%=link_to 'Privacy Policy', 'https://fast-documents.s3.eu-west-2.amazonaws.com/Firewood+Tools+Privacy+Policy+v1.0.pdf', :target => 'blank' %> and
  <%=link_to 'Terms of Service', 'https://fast-documents.s3.eu-west-2.amazonaws.com/Firewood+Tools+Terms+of+Service+v1.0.pdf', :target => 'blank' %> 
</small>   
  
  
  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "text-field form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field form-control" %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "Set my password", class: "btn btn-outline-success btn-block" %>
  </div>
<% end %>

<br>

<%= render "devise/shared/links" %>

</div>
